<div class="alert">
  <p><%= flash[:notice] %></p>
</div>

<h1>映画一覧</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>映画タイトル</th>
      <th>公開年</th>
      <th>上映中か</th>
      <th>概要</th>
      <th>画像URL</th>
      <th>作成日時</th>
      <th>更新日時</th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
    <tr>
      <td><%= link_to movie.id, admin_edit_movie_path(movie.id) %></td>
      <td><%= movie.name %></td>
      <td><%= movie.year %></td>
      <td>
        <%= movie.is_showing ? "上映中" : "上映予定" %>
      </td>
      <td><%= movie.description %></td>
      <td><%= link_to "画像", movie.image_url, target: "_blank" %></td>
      <td><%= movie.created_at %></td>
      <td><%= movie.updated_at %></td>
    </tr>
    <% end %>
  </tbody>
</table>