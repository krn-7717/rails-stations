<% if @movie.errors.any? %>
<div class="alert alert-error" role="alert">
  <p><%= @movie.errors.full_messages.join(", ") %></p>
</div>
<% end %>

<h1>映画情報更新</h1>

<%= form_with model: [:admin, @movie], local: true do |f| %>
<div class="field">
  <%= f.label :name, "映画タイトル" %>
  <%= f.text_field :name %>
</div>

<div class="field">
  <%= f.label :year, "公開年" %>
  <%= f.number_field :year %>
</div>

<div class="field">
  <%= f.label :is_showing, "上映中か" %>
  <%= f.select :is_showing, [["上映中", true], ["上映予定", false]] %>
</div>

<div class="field">
  <%= f.label :description, "概要" %>
  <%= f.text_area :description %>
</div>

<div class="field">
  <%= f.label :image_url, "画像URL" %>
  <%= f.text_area :image_url %>
</div>

<div class="actions">
  <%= link_to "Close", admin_movies_path, class: "close-button" %>
</div>

<div class="actions">
  <%= f.submit "Save Changes" %>
</div>

<div class="actions">
  <%= link_to "Delete", admin_movie_path(@movie.id), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "delete-button" %>
</div>

<% end %>